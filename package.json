{
  "name": "semversion",
  "description": "Github action for semver release",
  "version": "0.1.2",
  "author": "Mehdi Rahimi <mehdirahimi.dev@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mehdi-ra/semversion.git"
  },
  "bugs": {
    "url": "https://github.com/mehdi-ra/semversion/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "pnpm exec jest",
    "coverage": "pnpm exec make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "pnpm exec prettier --write .",
    "format:check": "pnpm exec prettier --check .",
    "lint": "pnpm exec eslint . --fix",
    "package": "pnpm exec ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "pnpm run package -- --watch",
    "prepare": "husky",
    "test": "pnpm exec jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@types/axios": "0.9.36",
    "@types/semver": "7.7.0",
    "axios": "1.10.0",
    "octokit": "5.0.3",
    "semver": "7.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/globals": "30.0.4",
    "@types/jest": "30.0.0",
    "@types/node": "24.0.14",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "@vercel/ncc": "0.38.3",
    "eslint": "9.31.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-i18n-text": "^1.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-jsonc": "2.20.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "5.5.1",
    "globals": "^16.3.0",
    "husky": "9.1.7",
    "jest": "30.0.4",
    "make-coverage-badge": "1.2.0",
    "prettier": "3.6.2",
    "prettier-eslint": "16.4.2",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3"
  }
}
